{
  "manifest_version": 3,
  "name": "Storage & Cookie Manager",
  "version": "1.0",
  "description": "A modern extension to manage LocalStorage, SessionStorage, and Cookies on Chromium-based browsers.",
  "icons": {
    "16": "img/16x16.png",
    "48": "img/48x48.png",
    "128": "img/128x128.png"
  },
  "action": {
    "default_icon": "img/128x128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}